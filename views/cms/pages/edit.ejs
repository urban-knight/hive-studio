	<link rel="stylesheet" type="text/css" href="/static/lib/slick-1.8.0/slick-theme.css" />

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h4>General information</h4>
					</div>
					<div class="panel-body">
						<form action="/cms/pages/<%= page._id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
							<div class="col-lg-6">
								<div class="form-group">
									<label class="data-params">View: </label>
									<input class="form-control" type="text" name="page[view]" value="<%= page.view %>" required>
								</div>
							</div>
					</div>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="panel with-nav-tabs panel-default">
					<ul class="nav nav-tabs nav-justified">
						<li role="presentation" class="active">
							<a data-toggle="tab" href="#lang_en" class="panel-title">English</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_uk" class="panel-title">Ukrainian</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ru" class="panel-title">Russian</a>
						</li>
					</ul>
					<div class="panel-body">
						<div class="tab-content">
							<div id="lang_en" class="tab-pane fade in active">
								<div class="form-group">
									<label>URL: </label>
									<div class="input-group">
										<span class="input-group-addon" id="url-addon">
											<strong>https://hive-studio.net/</strong>
										</span>
										<input class="form-control page-url" type="text" name="page[en][url]" lang="en" aria-describedby="url-addon" value="<%= page.en.url %>" required>
									</div>
								</div>
								<div class="form-group">
									<label class="data-params">Name: </label>
									<a class="btn btn-primary btn-lang" target="page-name" lang="en">translate</a>
									<input class="form-control page-name" type="text" name="page[en][name]" lang="en" value="<%= page.en.name %>" required>
								</div>
								<div class="form-group">
									<label class="data-params">Short Description: </label>
									<a class="btn btn-primary btn-lang" target="page-name" lang="en">translate</a>
									<input class="form-control page-short-desc" type="text" name="page[en][short_desc]" lang="en" value="<%= page.en.short_desc %>" required>
								</div>
								<div class="form-group">
									<label class="data-params">Page Context: </label>
									<a class="btn btn-primary btn-lang" target="page-context" lang="en">translate</a>
									<input class="form-control page-context" type="text" name="page[en][page_context]" lang="en" value="<%= page.en.page_context %>" required>
								</div>
								<div class="form-group">
									<label class="data-params">Description: </label>
									<a class="btn btn-primary btn-lang" target="page-desc" lang="en">translate</a>
									<textarea id="en-page-desc" class="form-control page-desc" type="text" name="page[en][desc]" lang="en" rows="6"><%= page.en.desc %></textarea>
								</div>
								<input type="text" id="keywords-en" name="page[en][keywords]" value="<%= JSON.stringify(page.en.keywords) %>" hidden>
								<label class="data-params">Keywords: </label>
								<div class="item-container project-items row">
  									<div class="col-lg-12">
  										<ul class="list-group item-list"></ul>
  									</div>
  									<div class="col-lg-12">
	  									<div class="item-form hidden">
										  	<input class="form-control item-field" type="text" name="keywords-en">
	  										<a class="btn btn-primary-inversed item-cancel"><i class="glyphicon glyphicon-remove"></i></a>
	  										<a class="btn btn-primary-inversed item-save"><i class="glyphicon glyphicon-ok"></i></a>
	  									</div> 
	  									<a class="btn btn-primary-inversed item-add" style="float: right;"><i class="glyphicon glyphicon-plus"></i></a>							
  									</div>
  								</div>
							</div>
							<div id="lang_uk" class="tab-pane fade in">
								<div class="form-group">
									<label>URL: </label>
									<div class="input-group">
										<span class="input-group-addon" id="url-addon">
											<strong>https://hive-studio.net/uk/</strong>
