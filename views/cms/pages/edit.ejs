<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="panel with-nav-tabs panel-default">
					<ul class="nav nav-tabs nav-justified">
						<li role="presentation" class="active">
							<a data-toggle="tab" href="#lang_en" class="panel-title">English</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ua" class="panel-title">Ukrainian</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ru" class="panel-title">Russian</a>
						</li>
					</ul>
					<div class="panel-body">
						<form action="/cms/services/<%= service._id %>?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
							<div class="tab-content">
								<div id="lang_en" class="tab-pane fade in active">
									<div class="form-group">
										<label>URL: </label>
										<div class="input-group">
											<span class="input-group-addon" id="url-addon">
												<strong>https://www.hive-studio.net/services/</strong>
											</span>
											<input class="form-control service-url" type="text" name="service[en][url]" lang="en" aria-describedby="url-addon" value="<%= service.en.url %>" required>
										</div>
									</div>
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="service-name" lang="en">translate</a>
										<input class="form-control service-name" type="text" name="service[en][name]" lang="en" value="<%= service.en.name %>" required>
									</div>
									<div class="form-group">
										<label class="data-params">Description: </label>
										<a class="btn btn-primary btn-lang" target="service-desc" lang="en">translate</a>
										<textarea id="en-service-desc" class="form-control service-desc" type="text" name="service[en][desc]" lang="en" rows="6" required><%= service.en.desc %></textarea>
									</div>
									<div class="form-group">
										<label class="data-params">Extended description: </label>
										<a class="btn btn-primary btn-lang" target="service-ext-desc" lang="en">translate</a>
										<textarea id="en-service-ext-desc" class="form-control service-ext-desc" type="text" name="service[en][ext_desc]" lang="en" rows="12" required><%= service.en.ext_desc %></textarea>
									</div>
								</div>
								<div id="lang_ua" class="tab-pane fade in">
									<div class="form-group">
										<label>URL: </label>
										<div class="input-group">
											<span class="input-group-addon" id="url-addon">
												<strong>https://www.ua.hive-studio.net/services/</strong>
											</span>
											<input class="form-control service-url" type="text" name="service[ua][url]" lang="uk" aria-describedby="url-addon" value="<%= service.ua.url %>" required>
										</div>
									</div>
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="service-name" lang="uk">translate</a>
										<input class="form-control service-name" type="text" name="service[ua][name]" lang="uk" value="<%= service.ua.name %>" required>
									</div>
									<div class="form-group">
										<label class="data-params">Description: </label>
										<a class="btn btn-primary btn-lang" target="service-desc" lang="uk">translate</a>
										<textarea id="uk-service-desc" class="form-control service-desc" type="text" name="service[ua][desc]" lang="uk" rows="6" required><%= service.ua.desc %></textarea>
									</div>
									<div class="form-group">
										<label class="data-params">Extended description: </label>
										<a class="btn btn-primary btn-lang" target="service-ext-desc" lang="uk">translate</a>
										<textarea id="uk-service-ext-desc" class="form-control service-ext-desc" type="text" name="service[ua][ext_desc]" lang="uk" rows="12" required><%= service.ua.ext_desc %></textarea>
									</div>
								</div>
								<div id="lang_ru" class="tab-pane fade in">
									<div class="form-group">
										<label>URL: </label>
										<div class="input-group">
											<span class="input-group-addon" id="url-addon">
												<strong>https://www.ru.hive-studio.net/services/</strong>
											</span>
											<input class="form-control service-url" type="text" name="service[ru][url]" lang="ru" aria-describedby="url-addon" value="<%= service.ru.url %>" required>
										</div>
									</div>
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="service-name" lang="ru">translate</a>
										<input class="form-control service-name" type="text" name="service[ru][name]" lang="ru" value="<%= service.ru.name %>" required>
									</div>
									<div class="form-group">
										<label class="data-params">Description: </label>
										<a class="btn btn-primary btn-lang" target="service-desc" lang="ru">translate</a>
										<textarea id="ru-service-desc" class="form-control service-desc" type="text" name="service[ru][desc]" lang="ru" rows="6" required><%= service.ru.desc %></textarea>
									</div>
									<div class="form-group">
										<label class="data-params">Extended description: </label>
										<a class="btn btn-primary btn-lang" target="service-ext-desc" lang="ru">translate</a>
										<textarea id="ru-service-ext-desc" class="form-control service-ext-desc" type="text" name="service[ru][ext_desc]" lang="ru" rows="12" required><%= service.ru.ext_desc %></textarea>
									</div>
								</div>
							</div>
							<div class="form-group">
								<input class="btn btn-primary btn-lg" type="submit" value="Save Service" style="float: right;">
							</div>
						</form>
						<a class="btn  btn-lg btn-primary-inversed btn-back-new" href="/cms/services">
							<i class="glyphicon glyphicon-chevron-left"></i> Back
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<% include ../partials/footer %>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
	<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=cv1jk6lwz0h07mv2ifw3qvk32chw0tmbqe2hgti6gsm9ydo3"></script>
	<script type="text/javascript" src="/static/lib/translate/translate.min.js"></script>
	<script type="text/javascript" src="/static/cms/js/services/edit.js"></script>