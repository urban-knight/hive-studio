<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="panel with-nav-tabs panel-default">
					<ul class="nav nav-tabs nav-justified">
						<li role="presentation" class="active">
							<a data-toggle="tab" href="#lang_en" class="panel-title">English</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ua" class="panel-title">Ukrainian</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ru" class="panel-title">Russian</a>
						</li>
					</ul>
					<div class="panel-body">
						<form action="/cms/business-cases" method="POST" enctype="application/x-www-form-urlencoded">
							<div class="tab-content">
								<div id="lang_en" class="tab-pane fade in active">
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="business_case-name" lang="en">translate</a>
										<input class="form-control business_case-name" type="text" name="business_case[en][name]" lang="en" required>
									</div>
								</div>
								<div id="lang_ua" class="tab-pane fade in">
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="business_case-name" lang="uk">translate</a>
										<input class="form-control business_case-name" type="text" name="business_case[ua][name]" lang="uk" required>
									</div>
								</div>
								<div id="lang_ru" class="tab-pane fade in">
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="business_case-name" lang="ru">translate</a>
										<input class="form-control business_case-name" type="text" name="business_case[ru][name]" lang="ru" required>
									</div>
								</div>
							</div>
							<div class="form-group">
								<input class="btn btn-primary btn-lg" type="submit" value="Save Case" style="float: right;">
							</div>
						</form>
						<a class="btn  btn-lg btn-primary-inversed btn-back-new" href="/cms/projects">
							<i class="glyphicon glyphicon-chevron-left"></i> Back
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<% include ../partials/footer %>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
	<script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=cv1jk6lwz0h07mv2ifw3qvk32chw0tmbqe2hgti6gsm9ydo3"></script>
	<script type="text/javascript" src="/static/lib/translate/translate.min.js"></script>
	<script type="text/javascript" src="/static/cms/js/cases/new.js"></script>