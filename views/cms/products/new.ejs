<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="panel with-nav-tabs panel-default">
					<ul class="nav nav-tabs nav-justified">
						<li role="presentation" class="active">
							<a data-toggle="tab" href="#lang_en" class="panel-title">English</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ua" class="panel-title">Ukrainian</a>
						</li>
						<li role="presentation">
							<a data-toggle="tab" href="#lang_ru" class="panel-title">Russian</a>
						</li>
					</ul>
					<div class="panel-body">
						<form action="/cms/products" method="POST" enctype="application/x-www-form-urlencoded">
							<div class="tab-content">
								<div id="lang_en" class="tab-pane fade in active">
									<div class="form-group">
										<label>URL: </label>
										<div class="input-group">
											<span class="input-group-addon" id="url-addon">
												<strong>https://www.hive-studio.net/products/</strong>
											</span>
											<input class="form-control product-url" type="text" name="product[en][url]" lang="en" aria-describedby="url-addon" required>
										</div>
									</div>
									<div class="form-group">
										<label class="data-params">Name: </label>
										<a class="btn btn-primary btn-lang" target="product-name" lang="en">translate</a>
										<input class="form-control product-name" type="text" name="product[en][name]" lang="en" required>
									</div>
									<div class="form-group">
										<label class="data-params">Price: </label>
										<a class="btn btn-primary btn-lang" target="product-price" lang="en">translate</a>
										<input class="form-control product-price" type="text" name="product[en][price]" lang="en" required>
									</div>
									<div class="form-group">
										<label class="data-params">Description: </label>
										<a class="btn btn-primary btn-lang" target="product-desc" lang="en">translate</a>
										<textarea id="en-product-desc" class="form-control product-desc" type="text" name="product[en][desc]" lang="en" rows="6"></textarea>
									</div>
									<div class="form-group">
										<label class="data-params">Extended description: </label>
										<a class="btn btn-primary btn-lang" target="product-ext-desc" lang="en">translate</a>
										<textarea id="en-product-ext-desc" class="form-control product-ext-desc" type="text" name="product[en][ext_desc]" lang="en" rows="12"></textarea>
									</div>
								</div>
