<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="jumbotron dmcc-jumbo">
					<h1>Products List</h1>
					<p>Here you can create, modify or delete any product of the Studio.</p>
					<a href="/cms" class="btn btn-primary" style="float: left;"><i class="glyphicon glyphicon-chevron-left"></i> Back</a>
					<a class="btn btn-primary-inversed" href="/cms/products/new">Add a new Product</a>
				</div>
			</div>
		</div>
		<div class="row">
			<% for (product of products){ %>
				<div class="col-lg-12">
					<div class="thumbnail menu-card">
						<div class="caption">
							<h3><%= product.en.name %></h3>
							<p><%- product.en.desc %></p>
								<a href="/cms/products/<%= product.id %>/edit" class="btn btn-primary menu-btn" role="button">Edit</a>
								<form action="/cms/products/<%= product.id %>?_method=DELETE" method="POST">
									<button class="btn btn-primary-inversed menu-btn-inversed">Delete</button>
								</form>
						</div>
					</div>
				</div>
			<% } %>
		</div>
	</div>

	<% include ../partials/footer %>