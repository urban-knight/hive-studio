<% include ./partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="jumbotron dmcc-jumbo">
					<h2>Administrator configuration</h2>
				</div>				
			</div>
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-body">
						<form action="/cms/settings?_method=PUT" method="POST">
							<input type="text" name="user[id]" value="<%= user._id %>" hidden>
							<div class="form-group">
								<label>Username: </label>
								<input class="form-control" type="text" name="user[username]" value="<%= user.username %>" required>
							</div>
							<div class="form-group">
								<label>Password: </label> <span id="pass-warning" class="label label-danger hidden"></span><span id="pass-alert" class="label label-warning hidden"></span>
								<input id="key-1" class="form-control" type="password" name="user[password]" value="<%= user.password %>" required>
							</div>
							<div class="form-group">
								<label>Repeat password: </label>
								<input id="key-2" class="form-control" type="password" name="repeat-pass" value="<%= user.password %>" required>
							</div>
			    			<div class="form-group">
			    				<input id="btn-save" class="btn btn-primary btn-lg" type="submit" value="Save" style="float: right;">
			    			</div>
						</form>
						<a class="btn  btn-lg btn-primary-inversed" href="/cms"><i class="glyphicon glyphicon-chevron-left"></i> Back</a>							
					</div>
				</div>
			</div>	
		</div>
	</div>

<% include ./partials/footer %>
<script type="text/javascript" src="/static/cms/js/settings.js"></script>